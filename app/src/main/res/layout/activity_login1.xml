<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="mysnapp.app.dei.com.mysnapp.login.LoginViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/grayish_white"
                >

                <TextView
                    android:id="@+id/login_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/mont_light"
                    android:text="Sign in with"
                    android:textColor="@color/redTextColor"
                    android:textSize="20sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/btnFacebook"
                    />

                <ImageView
                    android:id="@+id/btnFacebook"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"

                    android:src="@drawable/ic_profile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/login_tv1" />

                <RelativeLayout
                    android:id="@+id/rellay_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnFacebook"
                    app:layout_constraintBottom_toTopOf="@+id/etUsername"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/redTextColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/grayish_white"
                        android:fontFamily="@font/mont_light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="OR"
                        android:textColor="#919191"
                        android:textSize="20sp" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:background="#F0F0F0"
                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/mont_light"
                    android:hint="Username"
                    android:minHeight="45dp"
                    android:padding="10dp"
                    android:text="@={model.login.model.email}"
                    app:error="@{model.login.emailError}"
                    app:onFocus="@{model.getEmailOnFocusChangeListener()}"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rellay_login" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="#F0F0F0"
                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/mont_light"
                    android:hint="Password"
                    android:minHeight="45dp"
                    android:padding="10dp"
                    android:text="@={model.login.model.password}"
                    app:error="@{model.login.passwordError}"
                    app:onFocus="@{model.getPasswordOnFocusChangeListener()}"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etUsername" />

                <CheckBox
                    android:id="@+id/chkRememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Remember Me"
                    android:textColor="@android:color/darker_gray"
                    android:checked="@{model.login.rememberMe}"
                    android:onCheckedChanged="@{(v, checked) -> model.checkedChangedListener(v, checked)}"

                    app:layout_constraintTop_toBottomOf="@+id/etPassword"
                    app:layout_constraintLeft_toLeftOf="@+id/etPassword"

                    />

                <!--android:onCheckedChanged="@{viewModel.rememberMeChanged}"-->

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/redTextColor"
                    android:fontFamily="@font/mont_light"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="20sp"

                    android:onClick="@{(v) -> model.onButtonClick(v)}"
                    android:enabled="@{model.login.valid}"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/chkRememberMe" />

                <!--android:onClick="@{(v) -> model.onButtonClick(v)}"-->

                <RelativeLayout
                    android:id="@+id/rellay_login2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="54dp"
                    android:layout_marginBottom="24dp"
                    android:padding="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/tvWhat_mySnapps"
                    app:layout_constraintTop_toBottomOf="@+id/btnLogin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/redTextColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/tvForgot"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/mont_light"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Forgot"
                            android:textColor="@color/redTextColor"
                            android:textSize="16sp" />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@color/redTextColor" />

                        <TextView
                            android:id="@+id/tvRegister"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/mont_light"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Register"
                            android:textColor="@color/redTextColor"
                            android:textSize="16sp" />

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvWhat_mySnapps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/mont_medium"
                    android:text="What is mySnapps ?"

                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/rellay_login2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?android:attr/progressBarStyle"
                android:visibility="@{model.showLoader ? View.VISIBLE : View.GONE}"
                />

        </RelativeLayout>

    </ScrollView>

</layout>
